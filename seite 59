void Aufforderung(){   cout << "Bitte geben sie eine Zahl ein" << endl;   cout << "Diese Zahl mus ein integerwert sein" << endl;}void Fehlermeldung(){   cout << "Achtung: falche Eingabe" << endl;}int main()   {  int a, b;  Aufforderung();  do {   cin >> a;   if ( a < 0 || a > 100 ) Fehlermeldung(); } while ( a < 0 || a > 100 );  Aufforderung();  do {   cin >> b;   if ( b < 0 || b > 100 ) Fehlermeldung(); } while ( b < 0 || > 100 );   return 0; }
